{% extends 'base.html.twig' %}

{% block title %}Accueil | Newspaper{% endblock %}


{% block body %}

    <h1 class="text-center my-4">Articles à la Une</h1>

    <div class="row">
    <div class="col-10 mx- auto">
    
      {% for article in articles %} 

        <div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="..." class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">{{ article.title |capitalize }}</h5>
        <h5 class="card-title">{{ article.title }}</h5>
        <p class="card-text">{{ article.subtitle}}</p>
        <p class="card-text"><small class="text-muted">Créé le {{ article.createdAt}} </small></p>
      </div>
    </div>
  </div>
</div> 

{% endblock %}